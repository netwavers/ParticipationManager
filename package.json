{
  "name": "participation-manager",
  "version": "1.0.0",
  "description": "Participation Manager Desktop App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "pack": "electron-builder --dir"
  },
  "author": "Participation Manager User",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.participation.manager",
    "productName": "Participation Manager",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico",
      "verifyUpdateCodeSignature": false
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns"
    },
    "extraResources": [
      {
        "from": "dist-py/pytchat_server.exe",
        "to": "."
      }
    ],
    "files": [
      "**/*",
      "!dist/*",
      "!.git/*"
    ]
  }
}